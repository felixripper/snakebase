{
  "name": "new-mini-app-quickstart",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "node scripts/generate-manifest.js && next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:contract": "playwright test e2e/contract-deployment.spec.ts",
    "test:e2e:wallet": "ENABLE_WALLET_TESTS=true playwright test e2e/wallet-integration.spec.ts",
    "test:e2e:transaction": "playwright test e2e/transaction-flow.spec.ts",
    "anvil": "anvil --port 8545 --chain-id 31337",
    "deploy:base": "npx hardhat run scripts/deploy.js --network base",
    "deploy:baseSepolia": "npx hardhat run scripts/deploy.js --network baseSepolia",
    "verify:base": "npx hardhat verify --network base",
    "compile": "npx hardhat compile",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@coinbase/onchainkit": "^1.1.2",
    "@farcaster/miniapp-sdk": "^0.1.8",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.81.5",
    "@upstash/redis": "^1.35.6",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "iron-session": "^8.0.1",
    "jsonwebtoken": "^9.0.2",
    "next": "^16.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "viem": "^2.38.5",
    "wagmi": "^2.19.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@farcaster/quick-auth": "^0.0.7",
    "@next/eslint-plugin-next": "^15.3.4",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@playwright/test": "^1.51.0",
    "@sentry/nextjs": "^9",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.1.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@upstash/ratelimit": "^2.0.5",
    "autoprefixer": "^10.4.21",
    "chai": "^4.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "hardhat": "^2.19.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "playwright-extra": "^4.3.6",
    "postcss": "^8.5.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "tailwindcss": "^4.1.16",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
