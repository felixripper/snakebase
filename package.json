{
  "name": "new-mini-app-quickstart",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18 <21"
  },
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "node scripts/generate-manifest.js && next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "check-balance": "hardhat run scripts/check-balance.js --network base",
    "deploy:baseSepolia": "hardhat run scripts/deploy-leaderboard.js --network baseSepolia",
    "deploy:base": "hardhat run scripts/deploy-leaderboard.js --network base",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:contract": "playwright test e2e/contract-deployment.spec.ts",
    "test:e2e:wallet": "ENABLE_WALLET_TESTS=true playwright test e2e/wallet-integration.spec.ts",
    "test:e2e:transaction": "playwright test e2e/transaction-flow.spec.ts",
    "test:blockchain": "playwright test e2e/contract-deployment.spec.ts e2e/transaction-flow.spec.ts",
    "anvil": "anvil --port 8545 --chain-id 31337",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@farcaster/miniapp-sdk": "^0.1.8",
    "@tanstack/react-query": "^5.81.5",
    "@upstash/redis": "^1.35.6",
    "@wagmi/core": "^2.22.1",
    "bcryptjs": "^3.0.2",
    "ethers": "^6.15.0",
    "iron-session": "^8.0.1",
    "jsonwebtoken": "^9.0.2",
    "next": "^15.5.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "viem": "^2.38.4",
    "wagmi": "^2.18.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@farcaster/quick-auth": "^0.0.7",
    "@next/eslint-plugin-next": "^15.3.4",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^4.0.2",
    "@nomicfoundation/hardhat-ignition-ethers": "^3.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.1",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^3.0.4",
    "@playwright/test": "^1.51.0",
    "@sentry/nextjs": "^9",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.1.1",
    "@testing-library/user-event": "^14.6.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@upstash/ratelimit": "^2.0.5",
    "chai": "^6.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "hardhat": "^2.22.6",
    "hardhat-gas-reporter": "^2.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5"
  }
}
