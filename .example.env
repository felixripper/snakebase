# App Configuration
NEXT_PUBLIC_URL=http://localhost:3000

# Session Security (32+ characters required)
SECRET_COOKIE_PASSWORD=your-secret-key-at-least-32-characters-long

# Blockchain Features
NEXT_PUBLIC_BLOCKCHAIN_ENABLED=true
NEXT_PUBLIC_GAME_CONTRACT=0x... # Your deployed leaderboard contract address

# OnchainKit API Key (get from Coinbase Developer Platform)
NEXT_PUBLIC_ONCHAINKIT_API_KEY=

# Optional: Redis for persistent storage
# If not set, in-memory storage will be used
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Optional: Sentry for error tracking
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Optional: Hardhat deployment (for contract deployment only)
PRIVATE_KEY=
BASESCAN_API_KEY=