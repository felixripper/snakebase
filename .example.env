# Session cookie password (must be at least 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SECRET_COOKIE_PASSWORD=your_32_plus_character_secret_here

NEXT_PUBLIC_URL=

# Blockchain Configuration (Base Mainnet)
NEXT_PUBLIC_BLOCKCHAIN_ENABLED=true
NEXT_PUBLIC_GAME_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Service Wallet for On-Chain Submissions (keep secure!)
SERVICE_WALLET_PRIVATE_KEY=0x_your_service_wallet_private_key

# Base Mainnet RPC
BASE_RPC_URL=https://mainnet.base.org

# Contract Deployment (for Hardhat)
PRIVATE_KEY=your_private_key_without_0x_prefix
BASESCAN_API_KEY=your_basescan_api_key

# Redis Configuration (Upstash)
REDIS_URL=redis://your-redis-url-here
UPSTASH_REDIS_REST_URL=https://your-upstash-url-here
UPSTASH_REDIS_REST_TOKEN=your-upstash-token-here